<div class="up-vote">
  <i class="fa fa-caret-up"></i>
  <i class="fa fa-caret-down"></i>
</div>
<div class="user-comment">
  <div class="info">
    <span class="username"> <%= comment.authored_by.username  %> </span>
    <div class="tools">
      <span class="upvotes"><%= comment.upvote_count %></span>
      <span class="upvote-toggle">upvotes</span> - <span class="reply">Reply</span>
      <% if can? :destroy, comment  %>
        <% if current_user.id == comment.authored_by.id %>
          - <a href="#" data-event-id="<%= @event.id %>" data-comment-id="<%= comment.id %>" data-original-text="Delete" class="mute-delete">Delete</a>
        <% else %>
          - <a href="#" data-event-id="<%= @event.id %>" data-comment-id="<%= comment.id %>" data-original-text="Mute" class="mute-delete">Mute</a>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="comment-text"><%= comment.message %></div>
</div>
<div class="clearfix"></div>
<div class="nested-comments">
  <div class="replies-region"></div>
  <div class="replybox-region"></div>
</div>
<div class="clearfix"></div>
