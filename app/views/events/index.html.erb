<div class="container">
  <div class="row">
    <div class="col-sm-8">
      <% @events.group_by { |event| event.local_date }.each do |date, events| %>
        <%= render partial: 'day_summary', locals: { events: events, date: date } %>
      <% end %>
    </div>
    <div id="sidebar-region" class="col-sm-4">
      <div class="sidebar">
        <div id="subkast-filter">
          <%= render partial: 'subkast_list' %>
        </div>
        <div id="country-filter">
          <%= render partial: 'country_filter' %>
        </div>
      </div>
    </div>
  </div>
</div>
