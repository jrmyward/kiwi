<div class="event">
  <div class='upvote-container pull-left' data-upvote-component data-upvote-count="<%= event.upvote_count %>" data-upvoted="<%= event.upvoted?(current_user) %>" data-event-id="<%=event.id%>" data-logged-in="<%= current_user.present? %>">
  </div>
  <div class='image-container pull-left'>
    <%= link_to event_path(event), class: 'event-image' do %>
      <img src='<%=event.image.url(:thumb)%>' /></a>
    <% end %>
  </div>
  <div class='meta-container pull-left'>
    <a class='event-name' href="<%=event_path(event)%>"><%=event.name%></a><span class="event-info"> - <%=event.pretty_time(@time_zone)%></span><br />
    <span class='event-meta'>Added by <%=event.user%> - <%=event.full_subkast%> - <%= pluralize(event.comment_count, 'comment') %> - <%=event.location_string %>
    </span>
  </div>
  <div data-reminder-component data-event-id="<%= event.id %>" data-times="<%= event.reminders_for_user(current_user).map(&:time_to_event).to_json %>" data-logged-in="<%= current_user.present? %>" class="reminder-container">
  </div>
  <div class="calendar-container">
    <%= link_to(event_path(event, format: 'ics'), style:'color:#000000') do %>
      <i class="glyphicon glyphicon-calendar"></i>
    <% end %>
  </div>
  <div class='clearfix'></div>
</div>
