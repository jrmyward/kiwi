<div id="container" class="container">
  <div class="row signup-container">
    <div class="col-md-4 col-md-offset-4 signup-subcontainer">
      <% if resource.errors.present? %>
        <div class="row">
          <div class="alert alert-warning">
            <p> <%= devise_error_messages! %></p>
          </div>
        </div>
      <% end %>
      <h3>Join</h3>
      <% unless notice == "omniauthed" %>
      <%- if devise_mapping.omniauthable? %>
        <ul class="omniauth-login">
          <%- resource_class.omniauth_providers.each do |provider| %>
            <li class="<%= provider %>">
            <%= link_to "<span class=\"icon icon-#{provider}\"></span><span class=\"txt\">Sign up with #{provider.to_s.titleize} </span>".html_safe, user_omniauth_authorize_path(provider), class: provider %></li>
          <% end -%>
        </ul>
      <% end -%>
    <div class="formlegend">
      <div>Or via email</div>
    </div>
    <% end %>
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form', :class => "form-horizontal sign-up" } ) do |f| %>
          <%= f.text_field :username, class: 'form-control', :placeholder => "username" %>

<!-- REMOVING UNNECESSARY SIGNUP STEPS
          <%= f.text_field :name, class: 'form-control', :placeholder => "name" %>
 -->
          <%= f.text_field :email, class: 'form-control', :placeholder => "email address" %>

          <%= f.hidden_field :provider , class: 'form-control' %>
          <%= f.hidden_field :uid %>

          <%= f.password_field :password, class: 'form-control', :placeholder => "password" %>

          <%= f.password_field :password_confirmation, class: 'form-control', :placeholder => "confirm password" %>

          <%= f.submit "Join", class: 'btn btn-focus btn-block' %>

    <hr />
    <div class="col-md-10 center">
      <p>Already have an account? <%= link_to "Log In", session_path(User) %></p>
    </div>
    <% end %>
  </div>
</div>
